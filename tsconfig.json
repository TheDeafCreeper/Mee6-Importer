{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "Node",
        "sourceMap": false,
        "outDir": "./builds",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "importHelpers": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}